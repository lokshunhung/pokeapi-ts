{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "lib": ["ES2020"],
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true
    }
}
